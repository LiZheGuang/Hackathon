page{
  background: #444c61;
}
.top_title_time{
  font-size: 32rpx;
  color: white;
  text-align: center;
}
.bigTime{
  font-size: 150rpx;
}
.split_Message{
  color: white;
  font-size: 30rpx;
  text-align: center;
 
}
.curtain{
  margin-top: 50rpx;
  height: 500rpx;
  background: #2a303d;
  padding: 40rpx 0;
  box-sizing: border-box;
  text-align: center;
  color: white;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
}
.messageZezhao{
  background: #282b39d1;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}
.curtainTitle{
  font-size: 50rpx;
  font-weight: bold;
}
.tab_button{
  display: flex;
  align-items: center;
  /* flex-wrap: wrap; */
  flex-direction: column;

}
.tab_button .buttonImage {
  height: 122rpx;
  width: 368rpx;
  position: relative;
  margin-top: 50rpx;
  
}
.buttonImage image{
  width: 100%;
  height: 100%;
}
.buttonImage text{
  
  font-size: 40rpx;
  position: absolute;
  top:22rpx;
  left:0;
  width: 100%;
  height: 100%;
  text-align: center;

  color: white;

}
